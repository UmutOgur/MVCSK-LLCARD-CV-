@model Yetenek_Kartı.Models.Siniflar.Yetenek
@{
    ViewBag.Title = "YeniYetenek";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <form class="form-group" method="post">
        <div>
            <label>Yetenek Açıklama</label>
            @Html.TextBoxFor(x => x.Açiklama, new { @class = "form-control" })
        </div>
        </br>   
        <div>
            <label>Yetenek Değeri</label>
            @Html.TextBoxFor(x => x.deger, new { @class = "form-control" })
        </div>
        </br>
        <div>
            <button class="btn btn-success"> KAYDET</button>
            
        </div>
    </form>

